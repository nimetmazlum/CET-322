@model CET322.Models.Stage

@{
    ViewData["Title"] = "Aşamayı Sil";
}

<h2>Delete Stage</h2>

<h4>Delete this stage?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Stage Name
    </dt>
    <dd class="col-sm-10">
        @Model.Name
    </dd>
    <dt class="col-sm-2">
        Category
    </dt>
    <dd class="col-sm-10">
        @Model.Category?.Name
    </dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
