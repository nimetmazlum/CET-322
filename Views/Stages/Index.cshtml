@model IEnumerable<CET322.Models.Stage>

@{
    ViewData["Title"] = "Aşamalar";
}

<h2>Stage</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"> + Create Stage</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Stage Name</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
